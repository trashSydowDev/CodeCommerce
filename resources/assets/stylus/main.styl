*
  margin: 0
  padding: 0

.main
  width: 100%

.container
  width: 100%

.content
  center(1200px)
  clear:both

section
  column(1)

article
  column(1)
  form
    column(1/2)
    padding-top: 40px
  label
    column(1)
    font-family: 'Lato'
    font-weight: 300
    font-size: 1em
  table
    width : 100%
    thead
      text-align: left
      font-family: 'Lato'
      font-weight: 300
      font-size: 1em
    tbody
      text-align: left
      font-family: 'Lato'
      font-weight: 300
      font-size: 1.2em
      color: #337ab7
  a
    font-family: 'Lato'
    font-weight: 300
    font-size: 1em
    text-decoration: none
    color: #d9534f
